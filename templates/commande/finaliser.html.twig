{% extends 'base.html.twig' %}

{% block title %}Confirmation de la  commande{% endblock %}


{% block body %}
    <h1>Confirmation de votre commande</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <p>Votre commande n°{{ commande.id }} a été enregistrée avec succès le {{ commande.dateCommande|date('d/m/Y H:i') }}.</p>
    <p>Montant total : {{ commande.total|number_format(2) }} €</p>

    <h3>Détails de la commande :</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Quantité</th>
            <th>Prix unitaire</th>
            <th>Sous-total</th>
        </tr>
        </thead>
        <tbody>
        {% for article in commande.articles %}
            <tr>
                <td>{{ article.produit.nom }}</td>
                <td>{{ article.quantite }}</td>
                <td>{{ article.prixUnitaire|number_format(2) }} €</td>
                <td>{{ (article.prixUnitaire * article.quantite)|number_format(2) }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_liste') }}" class="btn btn-primary">Retour aux produits</a>
{% endblock %}


